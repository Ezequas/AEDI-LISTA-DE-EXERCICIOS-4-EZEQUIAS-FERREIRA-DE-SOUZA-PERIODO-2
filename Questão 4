#include <stdio.h>

int main() {
    int n;

    printf("Digite o n√∫mero de alunos: ");
    scanf("%d", &n);

    float notas[n];

    for (int i = 0; i < n; i++) {
        printf("Digite a nota do aluno %d: ", i + 1);
        scanf("%f", &notas[i]);
    }

    
    for (int i = 0; i < n - 1; i++) {
        int max_idx = i;
        for (int j = i + 1; j < n; j++) {
            if (notas[j] > notas[max_idx]) {
                max_idx = j;
            }
        }
        
        float temp = notas[max_idx];
        notas[max_idx] = notas[i];
        notas[i] = temp;
    }

    printf("Notas ordenadas em ordem decrescente:\n");
    for (int i = 0; i < n; i++) {
        printf("%.2f ", notas[i]);
    }
    printf("\n");

    return 0;
}
